class Solution {
    public ListNode reverseList(ListNode head) {
                 return reverseListInt(head, null);
    }
    private ListNode reverseListInt(ListNode head, ListNode newHead){
        if(head == null){
            return newHead;
        }
        ListNode curr = head.next;
        head.next = newHead;
        return reverseListInt(curr, head);
    }
}
